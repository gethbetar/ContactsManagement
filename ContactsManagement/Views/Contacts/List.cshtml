@model IEnumerable<Contact>
@{
    ViewBag.Title = "List Contact";
}

<div class="card-deck">
    @foreach (var contact in Model)
    {
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@contact.FirstName @contact.LastName</h3>
            </div>

            <div class="card-body text-center">


                <div class="form-group row">
                    <div class="input-group">
                        <input asp-for="@contact.Email" class="form-control" disabled="disabled" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="input-group">
                        <input asp-for="@contact.Phone" class="form-control" disabled="disabled" placeholder="Phone">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-phone"></span>
                            </div>
                        </div>
                    </div>
                </div>



            </div>

            <div class="card-footer text-center">
                <a asp-action="show"
                   asp-route-id="@contact.Id"
                   class="btn btn-primary m-1"><i class="fas fa-eye"></i></a>
                <a asp-action="Update"
                   asp-route-id="@contact.Id"
                   class="btn btn-primary m-1"><i class="fas fa-edit"></i></a>
                <a asp-action="Delete"
                   asp-route-id="@contact.Id"
                   class="btn btn-danger m-1"><i class="fas fa-trash"></i></a>
            </div>
        </div>
    }
</div>

