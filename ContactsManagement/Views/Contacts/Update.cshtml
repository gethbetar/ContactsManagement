@model Contact

@{
    ViewBag.Title = "Update Contact";
}
<form enctype="multipart/form-data" asp-action="Update"
      method="post" class="mt-3">
    <input hidden asp-for="Id" />
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-edit"></i>
                Update Contact
            </h3>
        </div>
        <div class="card-body ">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                        <div class="input-group mb-3">
                            <input asp-for="FirstName" class="form-control" placeholder="First Name">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                        <div class="input-group mb-3">
                            <input asp-for="LastName" class="form-control" placeholder="Last Name">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <div class="input-group mb-3">
                            <input asp-for="Email" class="form-control" placeholder="Email">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                        <div class="input-group mb-3">
                            <input asp-for="Phone" class="form-control" placeholder="Phone">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-phone"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-12">
                    <span asp-validation-for="Address" class="text-danger"></span>
                    <textarea asp-for="Address" class="form-control" placeholder="Address"></textarea>
                </div>
            </div>



            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        <div class="card-footer">
            <div class="float-right">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Update</button>
            </div>
            <a asp-action="List" class="btn btn-default"><i class="fas fa-times"></i> Discard</a>
        </div>
    </div>
</form>